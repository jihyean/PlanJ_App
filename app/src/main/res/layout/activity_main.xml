<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="2dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:layout_width="261dp"
            android:layout_height="50dp"
            android:hint="여행 제목"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="30dp"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/one1"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck"/>
        <ImageButton
            android:id="@+id/btn_maps"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/one2"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck"/>

        <ImageButton
            android:id="@+id/btn_planlist"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/one3"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lay1"
        android:orientation="horizontal"
        android:gravity="right"
        android:background="#D9D9D9">

        <ImageButton
            android:id="@+id/btncal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/one4"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textdate"
            android:layout_width="212dp"
            android:layout_height="50dp"
            android:hint="02.09 ~ 02.13"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="25dp"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/one5"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/one6"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/one7"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay2"
        android:layout_above="@+id/lay4"
        tools:listitem="@layout/item_list_01" />

    <LinearLayout
        android:id="@+id/lay4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btnplan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/one8"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnwallet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/two1"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnmypage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/one9"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>
</RelativeLayout>